<Window x:Class="DSA.Common.Controls.Message.MessageDialog"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:fa="http://schemas.fontawesome.io/icons/"
             mc:Ignorable="d" 
             d:DesignHeight="100" MaxWidth="700" MaxHeight="120" d:DesignWidth="100" VerticalAlignment="Center" HorizontalAlignment="Center">
    <Grid Background="LightGray">
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <TextBlock Text="{Binding Text}"  VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="16"></TextBlock>        
    </Grid>
</Window>
